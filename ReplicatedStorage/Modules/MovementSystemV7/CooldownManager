-- Handles ability cooldowns
-- Game.ReplicatedStorage.Modules.MovementSystemV7.CooldownManager (this is a module script)

local CooldownManager = {}

local cooldowns = {}

function CooldownManager:Apply(abilityName, duration)
	cooldowns[abilityName] = tick() + duration
end

function CooldownManager:IsReady(abilityName)
	local endTime = cooldowns[abilityName]
	if not endTime then
		return true
	end
	return tick() >= endTime
end

function CooldownManager:GetRemaining(abilityName)
	local endTime = cooldowns[abilityName]
	if not endTime then
		return 0
	end
	return math.max(0, endTime - tick())
end

function CooldownManager:Reset(abilityName)
	cooldowns[abilityName] = nil
end

function CooldownManager:ResetAll()
	cooldowns = {}
end

return CooldownManager
